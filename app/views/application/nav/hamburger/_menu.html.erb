<div :class="{'block': open, 'hidden': !open}" class="hidden md:hidden">
  <div class="px-2 pt-4 pb-3 border-t border-gray-700">
    <% if customer_signed_in? %>
      <div class="flex items-center px-5">
        <div class="shrink-0">
          <%= render "customer/avatar" %>
        </div>
        <div class="ml-3">
          <div class="text-base font-medium leading-none text-white"><%= current_customer.name %></div>
          <div class="mt-1 text-sm font-medium leading-none text-gray-400"><%= current_customer.email %></div>
        </div>
      </div>
      <div class="mt-3 px-2">
        <%= link_to customer_profile_index_path, :class => 'btn text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700 inline-flex items-center w-full' do %>
          <%= render 'svg/identification', w: 'w-4', h: 'h-4' %>
          <%= t 'application.nav.customer.profile' %>
        <% end %>
      </div>
      <div class="mt-3 px-2">
        <%= link_to destroy_customer_session_path, method: :delete, :class => 'btn text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700 inline-flex items-center w-full' do %>
          <%= render 'svg/sign-out', w: 'w-4', h: 'h-4' %>
          <%= t 'auth.sign_out' %>
        <% end %>
      </div>
    <% else %>
      <%= link_to new_customer_registration_path, :class => 'btn btn-primary my-2 w-full' do %>
        <%= render 'svg/customer', w: 'w-4', h: 'h-4' %>
        <%= t 'auth.sign_up' %>
      <% end %>
      <%= link_to new_customer_session_path, :class => 'btn btn-secondary my-2 w-full' do %>
        <%= render 'svg/login', w: 'w-4', h: 'h-4' %>
        <%= t 'auth.login' %>
      <% end %>
    <% end %>
  </div>
</div>