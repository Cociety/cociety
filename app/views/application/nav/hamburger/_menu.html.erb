<div :class="{'block': open, 'hidden': !open}" class="hidden md:hidden">
  <div class="px-2 pt-4 pb-3 border-t border-gray-700">
    <% if customer_signed_in? %>
      <div class="flex items-center px-5">
        <div class="flex-shrink-0">
          <%= render "customer/avatar" %>
        </div>
        <div class="ml-3">
          <div class="text-base font-medium leading-none text-white"><%= current_customer.name %></div>
          <div class="mt-1 text-sm font-medium leading-none text-gray-400"><%= current_customer.email %></div>
        </div>
      </div>
      <div class="mt-3 px-2">
        <%= link_to t("customer.profile"), customer_profile_index_path, :class => 'mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700' %>
      </div>
      <div class="mt-3 px-2">
        <%= link_to t("auth.sign_out"), destroy_customer_session_path, method: :delete, :class => 'mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700'  %>
      </div>
    <% else %>
      <%= link_to t("auth.sign_up"), new_customer_registration_path, :class => 'btn btn-primary block my-2 w-full' %>
      <%= link_to t("auth.login"), new_customer_session_path, :class => 'btn btn-secondary block my-2 w-full' %>
    <% end %>
  </div>
</div>