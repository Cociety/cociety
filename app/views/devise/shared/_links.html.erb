<div class="text-sm flex flex-col">

  <% classes = "font-medium text-indigo-600 hover:text-indigo-500 m-1" %>
  <%- if controller_name != 'sessions' %>
      <%= link_to t("auth.login"), new_session_path(resource_name), class: classes %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t("auth.sign_up"), new_registration_path(resource_name), class: classes %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to t("auth.forgot_pwd?"), new_password_path(resource_name), class: classes %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to t("auth.no_confirm_instructions?"), new_confirmation_path(resource_name), class: classes %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to t("auth.no_unlock_instructions?"), new_unlock_path(resource_name), class: classes %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to t("auth.login_with", with: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), class: classes %>
    <% end %>
  <% end %>
</div>