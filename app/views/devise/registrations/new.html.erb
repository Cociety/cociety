<div class="flex-grow flex">
  <div class="flex-1 flex flex-col justify-center py-12 px-4 sm:px-6 lg:flex-none lg:px-20 xl:px-24">
    <div class="mx-auto w-full max-w-sm lg:w-96">
      <div>
        <img class="h-12 w-auto" src="https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg" alt="Workflow">
        <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
          <%= t "auth.registration.sign_up_for_account" %>
        </h2>
      </div>
      <div class="mt-8">
        <div class="mt-6">
          <% label_class = "block text-sm font-medium text-gray-700" %>
          <% input_class = "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class:"space-y-6 mb-8"} ) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div>
              <%= f.label :email, class: label_class %>
              <div class="mt-1">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: input_class %>
              </div>
            </div>
            <div>
              <%= f.label :name, class: label_class %>
              <div class="mt-1">
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: input_class %>
              </div>
            </div>
            <div>
              <%= f.label :password, t("helpers.label.customer.password_min", min: @minimum_password_length), class: label_class %>
              <div class="mt-1">
                <%= f.password_field :password, autocomplete: "new-password", class: input_class %>
              </div>
            </div>
            <div>
              <%= f.label :password_confirmation, class: label_class %>
              <div class="mt-1">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: input_class %>
              </div>
            </div>
            <div class="actions">
              <%= f.submit t("auth.sign_up"), class:"w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
  <div class="hidden lg:block relative w-0 flex-1">
    <%= image_tag "color_party.jpg", class:"absolute inset-0 h-full w-full object-cover" %>
  </div>
</div>
