<%
  payment_allocations ||= []
  payment_allocations = payment_allocations.sort { |a, b| b.percent <=> a.percent }
%>
<% if payment_allocations.empty? %>
  <%= t '.none' %>
<% else %>
  <div class="hidden lg:flex my-4">
    <% colors = %w(bg-indigo-600 bg-pink-600 bg-green-500 bg-red-500 bg-yellow-500 bg-blue-600) %>
    <% payment_allocations.each do |p| %>
      <% if p.percent.nonzero? %>
        <div class="flex flex-col first:rounded-l-lg last:rounded-r-lg shadow h-16 text-center <%= colors.shift %> text-sm font-medium text-gray-100" style="width: <%= p.percent %>%">
          <span class="leading-8 truncate overflow-ellipsis"><%= p.organization.name %></span>
          <span class="leading-8 truncate overflow-ellipsis"><%= p.percent %>%</span>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="flex my-4 flex-col h-96 lg:hidden">
    <% colors = %w(bg-indigo-600 bg-pink-600 bg-green-500 bg-red-500 bg-yellow-500 bg-blue-600) %>
    <% payment_allocations.each do |p| %>
      <% if p.percent.nonzero? %>
        <div class="first:rounded-t-lg last:rounded-b-lg <%= colors.shift %> text-sm font-medium text-gray-100 grid p-4 grid-cols-12 justify-center items-center" style="height: <%= p.percent %>%">
          <span class="leading-8 truncate overflow-ellipsis col-span-11"><%= p.organization.name %></span>
          <span class="leading-8 truncate overflow-ellipsis col-span-1"><%= p.percent %>%</span>
        </div>
      <% end %>
    <% end %>
  </div>
  <ul class="divide-y divide-gray-200">
    <% colors = %w(bg-indigo-600 bg-pink-600 bg-green-500 bg-red-500 bg-yellow-500 bg-blue-600) %>
    <%= form_with url: customer_payment_allocations_url do |f| %>
      <% payment_allocations.each do |p| %>
        <li class="py-4 flex flex-col lg:flex-row lg:items-center space-y-3 lg:space-y-0 lg:space-x-3">
          <div class="<%= colors.shift unless p.percent.zero? %> h-6 w-full lg:w-6 rounded-full flex-shrink-0"></div>
          <div class="flex items-center space-x-3">
            <div>
              <%= render "organization/avatar", organization: p.organization %>
            </div>
            <div class="flex-grow lg:w-64 lg:truncate">
              <%= f.hidden_field 'payment_allocations[][organization_id]', value: p.organization.id %>
              <%= f.label 'payment_allocations[][percent]', t("helpers.label.percent_to", organization: p.organization.name), class: 'block text-sm font-medium text-gray-700 whitespace-normal' %>
              <div class="mt-1 relative rounded-md shadow-sm w-full lg:w-20">
                <%= f.number_field 'payment_allocations[][percent]', value: p.percent, min: 0, max: 100, class: 'focus:ring-indigo-500 focus:border-indigo-500 block w-full pr-6 sm:text-sm border-gray-300 rounded-md' %>
                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                  <span class="text-gray-500 sm:text-sm">%</span>
                </div>
              </div>
            </div>
          </div>
          <p><%= p.organization.description %></p>
        </li>
      <% end %>
      <%= f.button type: :submit, class: "btn btn-secondary btn-center w-full lg:w-auto" %>
    <% end %>
  </ul>
<% end %>